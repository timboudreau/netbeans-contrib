<!--  ====================================================
       Defines classpaths for test building and execution
      ==================================================== -->

<project name="tasklist/usertasks/test/unit" basedir="." default="all">

    <!-- =================== -->
    <!-- Setting classpathes -->
    <!-- =================== -->
    
    <target name="set_classpath" depends="prepare-compile-classpath,prepare-codetest-classpath">
    </target>
    
    <!-- ========= -->
    <!-- Compilers -->
    <!-- ========= -->
    
    <target name="unit-compiler">
        <buildTests srcDir="unit/src"
            compileExcludes="org/netbeans/usertasks/modules/jars/">
            <classpath>
                <pathelement location="../build/classes"/>
                <pathelement location="../../core/src"/>
                <pathelement location="../../../nbbuild/netbeans/ide4/modules/autoload/tasklist-api.jar"/>
                <pathelement location="../../../nbbuild/netbeans/platform4/core/openide.jar"/>
                <pathelement location="../../../nbbuild/netbeans/platform4/core/openide-loaders.jar"/>
            </classpath> 
        </buildTests>
    </target>

    <!-- ================ -->
    <!-- Global Executors -->
    <!-- ================ -->
    
    <!-- This target is executed from test-executor in newly created Project -->
    <!-- Name of this task is defined in cfg-xxx.xml -->
    <!-- This target executes tests inside IDE -->
    <target name="runidetest">
        <executeTests pluginName="ide" classpath=""/>
    </target>
    
    <!-- This target is executed from test-executor in newly created Project -->
    <!-- Name of this task is defined in cfg-xxx.xml init,-->
    <!-- This target executes standalone tests -->
    <target name="runcodetest">
        <executeTests pluginName="jvm">
            <classpath>
                <pathelement location="../build/classes"/>
                <pathelement location="../../core/src"/>
                <pathelement location="../../../nbbuild/netbeans/ide4/modules/autoload/tasklist-api.jar"/>
                <pathelement location="../../../nbbuild/netbeans/platform4/core/openide.jar"/>
                <pathelement location="../../../nbbuild/netbeans/platform4/core/openide-loaders.jar"/>
            </classpath> 
        </executeTests>
    </target>

    <!-- ========================= -->
    <!-- Classpath for compilation -->
    <!-- ========================= -->
    
    <target name="prepare-compile-classpath"
         depends="jarcompile-classpath,srccompile-classpath,idecompile-classpath"/>
    
    <target name="jarcompile-classpath" if="jarcode.classpath">
        <echo message="Using jars classpath for compilation."/>
    	<!-- this classpath will be used for compiling tests against jars -->
	<path id="compiletest.classpath">        
            <pathelement location="../../../nbbuild/netbeans/modules/autoload/tasklist-api.jar"/>
                <!-- XXX -->
                <!--<pathelement location="../../../nbbuild/openide/loaders/netbeans/lib/openide-loaders.jar"/>
                <pathelement location="../../openide/io/netbeans/modules/org-openide-io.jar"/>-->

             	<pathelement path="${junit.path}"/>
	    	<pathelement path="${xerces.path}"/>
	</path>
    </target>
        
    <target name="srccompile-classpath" if="srccode.classpath">
        <echo message="Using srcs classpath for compilation."/>
    	<!-- this classpath will be used for compiling tests against sources -->
    	<path id="compiletest.classpath">        
	        <pathelement location="../src"/>
                <pathelement location="../../api/src"/>
                
	        <!--<fileset dir="../../../openide/netbeans/lib">
                    <include name="openide*.jar"/>
                </fileset>-->
	        <pathelement path="${junit.path}"/>
		<pathelement path="${xerces.path}"/>
                <pathelement location="../../core/src"/>
	</path>
    </target>
    
    <target name="idecompile-classpath" if="idecode.classpath">
        <echo message="Using IDE classpath for compilation."/>
    	<!-- this classpath will be used for compiling tests against installed IDE -->
    	<path id="compiletest.classpath">        
	        <!--<fileset dir="${netbeans.home}/lib">
                    <include name="openide*.jar"/>
                </fileset>-->
                <!-- XXX -->
                <!--<fileset dir="${netbeans.home}/modules/autoload">
                    <include name="openide-*.jar"/>
                </fileset>-->
                
	        <pathelement path="${junit.path}"/>
		<pathelement path="${xerces.path}"/>
    	</path>
    </target>
    
    <!-- ================================== -->
    <!-- Classpath for execution code tests -->
    <!-- ================================== -->
    
    <target name="prepare-codetest-classpath" 
            depends="jartest-classpath,srctest-classpath,idetest-classpath"/>
    
    <target name="jartest-classpath" if="jarcode.classpath">
        <echo message="Using jars classpath."/>
        <!-- this classpath will be used for executing tests against jars -->
	<path id="codetest.classpath">
            <!--<pathelement location="../../../openide/netbeans/lib/openide.jar"/>-->
    	</path>
    </target>
        
    <target name="srctest-classpath" if="srccode.classpath">
        <echo message="Using srcs classpath."/>
        <!-- this classpath will be used for executing tests against sources -->
    	<path id="codetest.classpath">
           <!--<pathelement location="../../../openide/loaders/netbeans/lib/openide-loaders.jar"/>-->
           
           <!-- Working sources should take precedence over usertasks.jar: -->
           <!--<pathelement location="../src"/>
           <pathelement location="../../../openide/netbeans/lib/openide.jar"/>
           <pathelement location="../../api/netbeans/modules/autoload/tasklist-api.jar"/>
           <pathelement location="../../core/src"/>-->
    	</path>
    </target>
    
    <target name="idetest-classpath" if="idecode.classpath">
        <echo message="Using IDE classpath."/>
        <!-- this classpath will be used for executing tests against installed IDE -->
    	<path id="codetest.classpath">
        	<pathelement location="${netbeans.home}/lib/openide.jar"/>
                <pathelement location="${netbeans.home}/lib/openide-loaders.jar"/>        
                <!-- XXX -->
                <!--<fileset dir="${netbeans.home}/modules/autoload">
                    <include name="openide-*.jar"/>
                </fileset>-->
    	</path>
    </target>
    

</project>
